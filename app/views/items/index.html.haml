%header.pcHeader
  =render 'header'

.main
  =render 'upper_main'
  =render 'middle_main'
  =render 'under_main'

%aside.appBanner
  .inner
    %h2.inner__title
      だれでもかんたん、人生を変えるフリマアプリ
    %p.inner__text
      今すぐ無料ダウンロード
    .innner__icon        
      %a.gBtn{:href => "#"}
        = image_tag "icon/google-play-badge.png"
      %a.aBtn{:href => "#"}
        = image_tag "icon/Download_on_the_App_Store_Badge_JP_blk_.png"

.footer
  = render 'footer'
  
%a{:href => "#"}
  .purchaseBtn
    %span.purchaseBtn__text
      出品する
    =image_tag 'icon/icon_camera.png'

%h1 Items#index
-if user_signed_in?
  .header__right
  = link_to "マイページ", class: "header__right--btn"
  = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "header__right--btn"
-else
  .header__right1
  = link_to "ログイン", new_user_session_path, class: "header__right1--btn"
  = link_to "新規登録", new_user_registration_path, class: "header__right1--btn"
%p Find me in app/views/items/index.html.erb
